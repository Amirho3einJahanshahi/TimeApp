<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3e3e3e"
>

    <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
    />

    <LinearLayout
            android:id="@+id/edit_et_start_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_date"
    >
        <EditText
                android:id="@+id/edit_hour_start_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="H"
                android:layout_weight="2"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textCursorDrawable="@null"
                android:backgroundTint="@color/colorPrimary"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
        />
        <EditText
                android:id="@+id/edit_minute_start_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="M"
                android:layout_weight="2"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:backgroundTint="@color/colorPrimary"
                android:inputType="number"
                android:padding="16dp"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@null"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

        />
        <EditText
                android:id="@+id/edit_second_start_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="S"
                android:layout_weight="2"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:backgroundTint="@color/colorPrimary"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textCursorDrawable="@null"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/edit_et_stop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_et_start_layout"
    >
        <EditText
                android:id="@+id/edit_hour_stop_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="H"
                android:layout_weight="2"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:backgroundTint="@color/colorPrimary"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textCursorDrawable="@null"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
        />
        <EditText
                android:id="@+id/edit_minute_stop_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="M"
                android:layout_weight="2"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:backgroundTint="@color/colorPrimary"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textCursorDrawable="@null"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
        />
        <EditText
                android:id="@+id/edit_second_stop_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="S"
                android:layout_weight="2"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number"
                android:backgroundTint="@color/colorPrimary"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textCursorDrawable="@null"
        />
    </LinearLayout>

    <EditText
            android:id="@+id/edit_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:maxLines="5"
            android:lines="5"
            android:padding="16dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@id/edit_et_stop_layout"
    />

    <TextView
            android:id="@+id/edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_below="@id/edit_desc"
            android:layout_margin="16dp"
    />
    <TextView
            android:id="@+id/edit_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_below="@id/edit_desc"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/edit_cancel"
    />

</RelativeLayout>